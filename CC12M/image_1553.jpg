<script>
    var searchString = "";
    var sellingType = 0;

    $(function(){
                    
        $(".enter-submit").on("keyup",function(event){
            if (event.which === 13) {
              event.preventDefault();
              $(".search-btn").trigger("click");
            }
        });

        if($('.autocompleteSelect').length>0) {
            $.each($(".autocompleteSelect"),function(){
                autocompleteSelect($(this));
            });
        }

        $(".selling-type").on("click",function(){
            sellingType = $(this).data("id");
            $(".selling-type").removeClass("active");
            $(this).addClass("active");
            buildSearchString();
        });

    });

    var valuesMains = {};


    function autocompleteSelect(select) {
        var id   = select.attr("id");
        var data  = [];
        var placeholder = $(this).data("placeholder");
        if(!placeholder) {
            placeholder = "Търси";
        }

        select.select2({
            placeholder: placeholder,
            data: data,
            language: "bg",
            ajax: {
                dataType: 'json',
                delay: 250,
                data: function (params) {
                  buildSearchString($(this).attr("id"));
                  return {
                    q: searchString,
                  };
                },
                processResults: function (data, page) {
                    if(id == "type_search") {
                        valuesMains = data;
                    }

                    return {
                        results: $.map(data, function (item) {
                            if(item.count) {
                                // return { text: item.value + " ("+item.count+")", id: item.id };
                            }
                            return { text: item.value , id: item.id };
                        })
                    };
                }
            }

        });
    }

    function addCountryToArea() {
        buildSearchString();
        $("#area_search").data("ajax--url","/api/selectfill/19/city/"+$("#country_id_search").val())+searchString;
        $('#area_search').select2('destroy');
        autocompleteSelect($('#area_search'));
    }

    function fillAreas() {
        buildSearchString();
        $("#neighborhood_search").data("ajax--url","/api/selectfill/19/area/"+$("#area_search").val())+searchString;
        $('#neighborhood_search').select2('destroy');
        autocompleteSelect($('#neighborhood_search'));
    }

    function addToQuickSearch() {
        buildSearchString();
    }

    function quickSearch() {
        if($("#q_search").val()) {
            searchString += "&q="+ $("#q_search").val();
        }

        if(!searchString) {
            searchString += "s=1"
        }

        window.location = "/search?"+searchString;
    }

    function buildSearchString(except) {
        var fields = { "2":"country_id_search","3":"area_search","83":"neighborhood_search","85":"type_search" };
        searchString = "s=1&fr=&fl=1";
        var ch = "";

        for(x in fields) {
            if(except && except == fields[x]) {

            }
            else if($("#"+fields[x]).val()) {
                if (Array.isArray($("#"+fields[x]).val())) {
                    for(xy in $("#"+fields[x]).val()) {
                        ch += x + "-" + $("#"+fields[x]).val()[xy] + ",";
                    }
